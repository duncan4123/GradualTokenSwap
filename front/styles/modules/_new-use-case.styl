@import '_fonts'
@import '_colors'

// .section.new-user-case
	
.n-u-c-box
	display flex
	margin 0 0 30px 0
	@media screen and (max-width 768px)
		flex-direction column
		margin 0
		.n-u-c-box__elem
			margin 0 0 30px 0
			padding 20px
		.n-u-c-box__icon
			width 100%
			height 75px
			left 0
			position relative
			margin-bottom 10px
		.n-u-c-elem__title, .text
			text-align center
	.text
		font-family: Exo2;
		font-style: normal;
		font-weight: 500;
		font-size: 14px;
		line-height: 160%;
		// text-align: center;

.n-u-c-box__elem
	display flex
	box-sizing: border-box;
	flex 1
	position relative
	margin 0 30px 0 0
	padding 20px 20px 20px 120px
	z-index 0
	flex-direction: column;
	&:last-child
		margin-right 0
	&:before
		z-index -1
		content ''
		position absolute
		height: calc(100% - 2px);
		width: calc(100% - 2px);
		top: 1px;
		left: 1px;
		bottom: 1px;
		right: 1px;
		background  Dark-Blue;
		clip-path: polygon(15px 0,100% 0,100% 100%,0 100%,0 15px);
	&:after
		z-index -2
		content ''
		position absolute
		height: 100%
		width: 100%
		top: 0px;
		left: 0px;
		bottom: 0px;
		right: 0px;
		background Cyan;
		clip-path: polygon(15px 0,100% 0,100% 100%,0 100%,0 15px);
		
.n-u-c-elem__title
	font-family: Jura;
	font-style: normal;
	font-weight: bold;
	font-size: 22px;
	line-height: 150%;
	// text-align: center;
	text-transform: uppercase;
	color: #45fff4;
	position: relative;
	// margin-bottom: 40px;

.n-u-c-box__icon
	position absolute
	width: 75px;
	left: 23px;
	height 100%
	top 0
	&.holders
		background url('/assets/img/holders.svg')
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
	&.traders
		background url('/assets/img/traders.svg')
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
	&.miners
		background url('/assets/img/miners.svg')
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
	&.onboarding-holders
		background url('/assets/img/people.svg')
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;