@import '_fonts'
@import '_colors'



.section
	box-sizing: border-box;
	display flex
	flex-direction column
	padding-bottom: 40px;
	min-height: min-content;
	min-width 320px
	border none	
	@media screen and (max-width 768px)
		padding 0 20px 40px 20px
	@media screen and (min-width 769px) and (max-width 1024px)
		padding 0 30px 40px 30px
	@media screen and (min-width 1025px) and (max-width 1280px)
		padding 0 30px 40px 30px
	@media screen and (min-width 1281px)
		padding 0 0 60px 0
		// padding: 0 0 40px 0 !important
		width: 1120px;
		margin: 0 auto;

	&.bottom			
		@media screen and (max-width 768px)
			padding 0 20px 0 20px
		@media screen and (min-width 769px) and (max-width 1024px)
			padding 0 30px 0 30px
		@media screen and (min-width 1025px) and (max-width 1280px)
			padding 0
			width: 100%;
			margin: 0;
			&:before
				content ''
				position absolute
				background url('/assets/img/background-image.svg')
				background-size: cover;
				background-repeat: no-repeat;
				background-position: center;
				// height: 340px
				height: 400px
				width: 100%;
				z-index 0
				left 0
				bottom 0
		@media screen and (min-width 1281px)
			padding 0
			width: 100%;
			margin: 0;
			&:before
				content ''
				position absolute
				background url('/assets/img/background-image.svg')
				background-size: cover;
				background-repeat: no-repeat;
				background-position: center;
				// height: 340px
				height: 400px
				width: 100%;
				z-index 0
				left 0
				bottom 0
		.text
			margin 20px auto
			text-align center
			z-index 1
			@media screen and (max-width 1024px)
				margin 20px auto
		position relative
