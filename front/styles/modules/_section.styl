			content ''
			position absolute
			background url('/assets/img/background-image.svg')
			background-size: cover;
			background-repeat: no-repeat;
			background-position: center;
			height: 100%;
			width: 100%;
			z-index 0
			left 0
		&:after
			content ''
			position absolute
			background: radial-gradient(68.28% 53.52% at 50% 50%, #1C2A4F 0%, #111B35 100%);
			height: 100%;
			width: 100%;
			z-index -1
			left 0
