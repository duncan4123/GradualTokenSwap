@import '_fonts'
@import '_colors'


// section--faq

.section.faq
	.radio
		margin-bottom 20px
		&.fix-mobile
			@media screen and (max-width 768px)
				// flex-direction: column;
				height: auto;
				.radio__text
					text-align center
					padding: 5px
		

.faq-dropdown
	display flex
	flex-direction: column;
	margin-bottom 20px
	&:last-child
		margin-bottom 0

.dropdown__question
	min-height 50px
	box-shadow: 0px 0px 2px #0291CE;
	display flex
	position relative
	cursor pointer
	// background Cyan
	
	clip-path: polygon(15px 0, 100% 0, 100% 100%, 0 100%, 0 15px);
	position relative
	@media screen and (max-width 1024px)
		clip-path none
		background none
		border 1px solid transparent
		border-bottom 1px solid #64FFF6
		box-shadow none
		&:before
			display none
		.dropdown__question--text
			margin-left 0
	
	&:before
		z-index -1
		content ''
		position absolute
		height: calc(100% - 2px);
		width: calc(100% - 2px);
		top: 1px;
		left: 1px;
		bottom: 1px;
		right: 1px;
		background radial-gradient(50% 50% at 50% 50%, #07646E 52.6%, #0F5266 100%);
		clip-path: polygon(15px 0, 100% 0, 100% 100%, 0 100%, 0 15px);
	&:after
		z-index -2
		content ''
		position absolute
		height: 100%
		width: 100%
		top: 0px;
		left: 0px;
		bottom: 0px;
		right: 0px;
		background Cyan;
		clip-path: polygon(15px 0, 100% 0, 100% 100%, 0 100%, 0 15px);

	.dropdown__question--text
		&:after
			content: '';
			height 100%
			right -10px
			width 16px
			top 0
			position absolute
			background url('/assets/img/dropdown-close.svg')
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
			// @media screen and (max-width 1024px)
			// 	right 15px
	&:hover
		&:before
			background: #07646E;
			// @media screen and (max-width 1024px)
			// 	background radial-gradient(50% 50% at 50% 50%, #07646E 52.6%, #0F5266 100%);
	&.open
		&:before
			background Cyan
			box-shadow none
		@media screen and (max-width 1024px)
			background Cyan
			&:before
				background Cyan				
			.dropdown__question--text
				margin-left 20px
		~.dropdown__answer
			display flex
		.dropdown__question--text
			line-height: 160%;
			color: #0F5467;
		.dropdown__question--text
			&:after
				background url('/assets/img/dropdown-open.svg')
				background-size: contain;
				background-repeat: no-repeat;
				background-position: center;

.dropdown__question--text
	font-family: Exo2;
	font-style: normal;
	font-weight: bold;
	font-size: 16px;
	line-height: 100%;

	color: Cyan;
	margin auto 35px auto 25px
	z-index 1
	
	padding: 10px 0;
	flex 1
	position relative

.dropdown__answer
	background: #1D2B4D;
	padding 25px 30px 30px 30px
	border-left: 1px solid #22596D;
	border-right: 1px solid #22596D;
	border-bottom: 2px solid Cyan;
	display none

.dropdown__answer--text
	font-family: Exo2;
	font-style: normal;
	font-weight: 500;
	font-size: 14px;
	line-height: 150%;

	color: Ultralight-Blue;
