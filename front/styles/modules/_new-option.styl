.new-option__schedule-box
	padding 20px
	flex 2
.schedule
	min-width: 310px;
	position relative	
	&[data-state='0']
		.schedule__line.current
			top 0
	&[data-state='1']
		.schedule__line.current
			top 61px
	&[data-state='3']
		.schedule__line.current
			top 157px
	&[data-state='4']
		.schedule__line.current
			top 220px
						
	&[data-type='put']
		&[data-state='2']
			.schedule__line.current
				top 93px
		&[data-state='3']
			.schedule-value.break-even
				right 0
		.schedule-value
			&.strike
				top 82px
				right 0
				background #FFD24C
			&.break-even
				top 177px
				background Cyan
		.schedule-zone
			&.top
				&:before
					background: linear-gradient(180deg, rgba(247, 110, 178, 0.1) 0%, rgba(247, 110, 178, 0.5) 100%);
				.schedule__line
					border-color #365096
				border-bottom 3px solid #FFD24C
			&.bottom
				&:before
					background: linear-gradient(180deg, rgba(69, 255, 244, 0.6) 0%, rgba(69, 255, 244, 0.2) 100%);		
				border-top 3px solid Cyan
	&[data-type='call']
		&[data-state='1']
			.schedule-value.break-even
				right 0
		&[data-state='2']
			.schedule__line.current
				top 126px
		.schedule-value
			&.strike
				top 177px
				right 0
				background #FFD24C
			&.break-even
				top 82px
				background Cyan
		.schedule-zone
			&.bottom
				&:before
					background: linear-gradient(180deg, rgba(247, 110, 178, 0.1) 0%, rgba(247, 110, 178, 0.5) 100%);
					transform: rotate(180deg);	
				.schedule__line
					border-color #365096
				border-top 3px solid #FFD24C
			&.top
				&:before
					background: linear-gradient(180deg, rgba(69, 255, 244, 0.6) 0%, rgba(69, 255, 244, 0.2) 100%);
					transform: rotate(180deg);	
				border-bottom 3px solid Cyan

.schedule__line
	height 30px
	border-bottom 1px solid #365096
	&:nth-child(1)
		border-top 1px solid #365096
	&.current
		border-bottom 3px solid white
		position absolute
		width 100%
		z-index 1
		transition: top 2s
		&:before
			content attr(data-value)
			height 22px
			min-width 150px
			position absolute
			bottom -1px
			transform translate(0, 50%)
			background white
			text-align: center;

			font-family: Exo2;
			font-style: normal;
			font-weight: bold;
			font-size: 12px;
			line-height: 100%;
			
			padding: 5px 10px;
			box-sizing: border-box;
.schedule-value
	position absolute
	height 22px
	min-width 150px
	
	font-family: Exo2;
	font-style: normal;
	font-weight: 500;
	font-size: 12px;
	line-height: 100%;
	text-align: center;
	color: #000000;

	padding: 5px 10px;
	box-sizing: border-box;
	z-index 2
	
	max-width: 45%;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	span
		font-weight: bold;	
.schedule-zone
	position relative
	&:before
		content ''
		height 100%
		width 100%
		position absolute
	&.top
		.schedule__line
			&:last-child
				height 27px
	&.bottom
		.schedule__line
			&:first-child
				height 27px

// .schedule__legend
.schedule-legend__title
	font-family: Exo2;
	font-style: normal;
	font-weight: bold;
	font-size: 14px;
	line-height: 160%;
	text-align: center;

	color: #FFFFFF;
	
	margin 23px auto 15px auto
.schedule-legend__vals
	display flex
	justify-content: center;
.schedule-legend__val
	font-family: Exo2;
	font-style: normal;
	font-weight: 500;
	font-size: 14px;
	line-height: 160%;
	color: #FFFFFF;
	position relative
	padding-left 19px
	margin-right 20px
	&:last-child
		margin-right 0
	&:before
		content ''
		position absolute
		height 14px
		width 14px
		border-radius 5px
		left 0
		top: 50%;
		transform: translate(0, -50%);
	&.red
		&:before
			background #F986BF
	&.green
		&:before
			background Cyan
	&.blue
		&:before
			background #0f5467
	&.lp
		&:before
			background #1d509e


