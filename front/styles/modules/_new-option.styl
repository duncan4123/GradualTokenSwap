	position relative
	margin-bottom 15px
	background: linear-gradient(90deg, #203060 0%, #24366B 51.04%, #203060 100%);
	padding-left 5px
	display: flex;
	flex-direction: column;
	justify-content: center;
	overflow hidden
	&:last-child
		margin-bottom 0
	&:before
		content ''
		height 100%
		width 5px
		position absolute
		left 0
	&.strike
		&:before
			background Warning-Yellow
	&.red
		&:before
			background #F76EB2
	&.green
		&:before
			background Cyan
	&.blue
		&:before
			background #0f5467
	&.lp
